{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imageTemplateName": {
        "type": "string"
        },
        "api-version": {
          "type": "string"
        },
        "svclocation": {
            "type": "string"
        }
    },
    
    "variables": {
    },


    "resources": [
      {
        "name": "[parameters('imageTemplateName')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "[parameters('api-version')]",
        "location": "[parameters('svclocation')]",
        "dependsOn": [],
        "tags": {
            "imagebuilderTemplate": "AzureImageBuilderSIG",
            "userIdentity": "enabled"
                },
            "identity": {
                "type": "UserAssigned",
                        "userAssignedIdentities": {
                        "/subscriptions/af110be4-53c3-4228-8760-edb81ef20996/resourcegroups/VMImages/providers/Microsoft.ManagedIdentity/userAssignedIdentities/aibIdentity1619548748": {}
                            
                    }
                    },
        
        "properties": {
            "buildTimeoutInMinutes" : 90,

            "vmProfile": 
                    {
                    "vmSize": "Standard_D3_v2",
                    "osDiskSizeGB": 127
                    },
        
            "source": {
                "type": "PlatformImage",
                    "publisher": "MicrosoftWindowsDesktop",
                    "offer": "office-365",
                    "sku": "20h2-evd-o365pp",
                    "version": "latest"
            },
            "customize": [

        
                    {
                        "type": "PowerShell",
                        "name": "installFsLogix",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/RikMerkens/imagebuilder/master/installfslogix.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "OptimizeOS",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/RikMerkens/imagebuilder/master/optimizewvd.ps1"
                    },
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "write-host 'restarting post Optimizations'",
                        "restartTimeout": "5m"
                    },
                    {
                        "type": "PowerShell",
                        "name": "Install Teams",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/danielsollondon/azvmimagebuilder/master/solutions/14_Building_Images_WVD/2_installTeams.ps1"
                    },
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                                    ],
                        "updateLimit": 40
                    },
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "write-host 'restarting post Optimizations'",
                        "restartTimeout": "5m"
                    },
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                                    ],
                        "updateLimit": 40
                    }                

            ],
            "distribute": 
            [
                {   
                    "type": "SharedImage",
                    "galleryImageId": "/subscriptions/af110be4-53c3-4228-8760-edb81ef20996/resourceGroups/VMImages/providers/Microsoft.Compute/galleries/ScoreUticaImages/images/Windows10WVD-2009",
                    "runOutputName": "sigOutput",
                    "artifactTags": {
                        "source": "wvd10",
                        "baseosimg": "windows10"
                    },
                    "replicationRegions": [
                      "westeurope"

                    ]
                }
            ]
            }
        }

    
    ]
}    







